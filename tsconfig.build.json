{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": false,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "incremental": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}